<div id="flash-messages" class="toast-container top-0 start-50 translate-middle-x p-3"
  data-controller="toast">
  <% [%w[notice success], %w[alert danger]].each do |(type, color)| %>
    <% if flash.key?(type) %>
      <%= simple_toast(title: t(type, scope: "flash"), message: flash[type], color: color) %>
    <% end %>
  <% end %>
</div>
