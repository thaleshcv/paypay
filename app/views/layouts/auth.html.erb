    <div class="row align-items-center pt-5 mt-5">
      <div class="col-md-8 text-center px-5">
        <%= image_tag 'logo-no-background.png',
        class: "img-fluid",
        width: "50%",
        alt: "xpensis logo" %>
        <h1 class="mt-5">Ferramenta online e gratuita para acompanhamento de despesas.</h1>
      </div>
      <div class="col-md-4">
        <div class="text-center mb-4">
        </div>
        <%= yield %>
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>
