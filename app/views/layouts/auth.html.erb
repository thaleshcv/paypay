<% content_for :content do %>
  <div class="container">
    <div class="row align-items-center pt-5 mt-5">
      <div class="col-md-8 text-center px-5">
        <h1 class="text-primary">xpensis</h1>
        <p class="lead fs-2">Ferramenta online e gratuita para acompanhamento de despesas.</p>
      </div>
      <div class="col-md-4">
        <div class="text-center mb-4">
          <%= link_to root_path do %>
            <%= image_tag 'logo-no-background.png',
            class: "img-fluid",
            width: "50%",
            alt: "xpensis logo" %>
          <% end %>
        </div>
        <%= yield %>
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render template: "layouts/application" %>
