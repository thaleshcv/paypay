<%= simple_form_for @entry, data: {controller: "mask"} do |f| %>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <%= f.input :title %>
        </div>
        <div class="col-md-6">
          <%= f.input :operation,
          collection: [%w[income Recebimento], %w[outgoing Despesa]],
          value_method: :first,
          label_method: :last,
          prompt: "Selecione o tipo de operação",
          disabled: f.object.persisted? %>
        </div>
        <div class="col-md-6">
          <%= f.association :category,
          collection: @categories,
          value_method: :id,
          label_method: :name,
          prompt: "Selecione a categoria",
          required: true %>
        </div>
        <div class="col-md-6">
          <%= f.input :date, as: :string, input_html: { type: 'date' } %>
        </div>
        <div class="col-md-6">
          <%= f.input :value, as: :string, input_html: {data: { mask_target: "currency" }} %>
        </div>
        <div class="col-md-12">
          <%= label_tag nil, "Situação", class: "form-label" %>
          <div class="d-flex align-items mb-3">
            <%= f.label :status, "Pendente", class: "form-check-label me-2" %>
            <div class="form-check form-switch">
              <%= f.check_box :status, {class: "form-check-input", role: "switch"}, "paid", "pending" %>
              <%= f.label :status, "Pago", class: "form-check-label" %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <%= f.input :comment, input_html: { rows: 5 } %>
        </div>
        <div class="colmd-12">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to 'Cancelar', entries_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <fieldset>
        <legend>Criar cobrança</legend>
        <%= f.simple_fields_for :billing do |b| %>
          <%= b.input :description %>
          <%= b.input :due_date,
          collection: (1..25),
          prompt: "Selecione o dia do lançamento" %>
          <%= b.input :cycles,
          collection: entry_billing_cycles_options,
          label_method: :first,
          value_method: :last,
          prompt: "Selecione quantidade de ciclos" %>
        <% end %>
      </fieldset>
    </div>
  <% end %>
