<li class="list-group-item list-group-item-action py-3">
  <div class="w-100 d-flex justify-content-between">
    <h5><%= entry.description %></h5>
    <h4><%= number_to_currency(entry.value) %></h4>
  </div>
  <div class="d-flex align-items-end justify-content-between">
    <% if entry.overdue? %>
      <strong class="text-uppercase text-danger">
        <i class="bi bi-exclamation-triangle"></i>&nbsp;
        Conta em atraso
      </strong>
    <% end %>
    <small>
      <%= link_to 'Detalhar', entry %> /
      <%= link_to 'Editar', edit_entry_path(entry) %> /
      <%= link_to 'Excluir',
        entry,
        class: "text-danger",
        data: {
          turbo_confirm: t("exclusion.confim"),
          turbo_method: :delete
        } %>
    </small>
  </div>
</li>
