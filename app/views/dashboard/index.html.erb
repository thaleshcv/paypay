<% content_for :page_title do %>
  Dashboard
<% end %>

<% content_for :page_actions do %>
  <div class="hstack gap-3">
    <div>
      <%= link_to 'Novo lançamento', new_entry_path %>
    </div>
    <div>
      <%= link_to 'Ver lançamentos', entries_path %>
    </div>
    <div>
      <%= link_to 'Lançamentos atrasados', pending_entries_path %>
    </div>
  </div>
<% end %>

<div class="bg-light rounded">
  <div class="row row-cols-2">
    <div class="col">
      <h3>Lançamentos atrasados</h3>
      <%= render 'entries/entries_list', entries: @pending_entries %>
    </div>
    <div class="col">
      <h3>Próximos lançamentos</h3>
      <%= render 'entries/entries_list', entries: @next_entries %>
    </div>
  </div>
</div>
