<%= simple_form_for @category do |f| %>
  <div class="row row-cols-1">
    <div class="col">
      <%= f.input :name %>
    </div>
    <div class="col">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Cancelar', categories_path, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>
